CREATE DATABASE house_price_prediction;
USE house_price_prediction;

CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    role ENUM('Admin', 'User') NOT NULL,
    name VARCHAR(255) NOT NULL,
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    aadhaar VARCHAR(12) DEFAULT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);8
CREATE TABLE predictions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    location VARCHAR(50) NOT NULL,
    area INT NOT NULL,
    bedrooms INT NOT NULL,
    schools VARCHAR(50) NOT NULL,
    crime VARCHAR(50) NOT NULL,
    distance_to_city_center FLOAT NOT NULL,
    year_built INT NOT NULL,
    garage VARCHAR(10) NOT NULL,
    predicted_price FLOAT NOT NULL,
    predicted_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE homes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    image_path VARCHAR(255),
    location VARCHAR(50),
    area INT,
    bedrooms INT,
    schools VARCHAR(50),
    crime VARCHAR(50),
    distance_to_city_center FLOAT,
    year_built INT,
    garage VARCHAR(10),
    price FLOAT
);
